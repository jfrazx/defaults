{
  "name": "@status/defaults",
  "version": "0.0.0-development",
  "description": "Transparently provide default values to objects",
  "main": "build/index.js",
  "scripts": {
    "commit": "git-cz",
    "test": "mocha",
    "prebuild": "rimraf build",
    "build": "tsc",
    "precoverage:test": "rimraf coverage",
    "coverage:check": "nyc check-coverage",
    "coverage:report": "nyc report --reporter=text-lcov > coverage.lcov",
    "coverage:post": "codecov",
    "coverage:test": "nyc mocha",
    "nyc": "nyc",
    "precommit": "npm run coverage:test && npm run coverage:check",
    "prepush": "npm run coverage:test",
    "publish": "npx semantic-release",
    "semantic-release": "semantic-release",
    "semantic:cli": "semantic-release-cli",
    "lint": "eslint ./src --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jfrazx/defaults.git"
  },
  "keywords": [
    "defaults",
    "proxy",
    "reflect",
    "hash",
    "array",
    "get",
    "set"
  ],
  "author": "jfrazx",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jfrazx/defaults/issues"
  },
  "homepage": "https://github.com/jfrazx/defaults#readme",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.2",
    "@types/sinon": "^10.0.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "chai": "^4.3.4",
    "codecov": "^3.8.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "mocha": "^9.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.3",
    "semantic-release-cli": "^5.4.3",
    "sinon": "^11.1.1",
    "source-map-support": "^0.5.19",
    "travis-deploy-once": "^5.0.11",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "mocha": {
    "recursive": true,
    "spec": "test/*.spec.ts",
    "reporter": "spec",
    "require": [
      "ts-node/register/transpile-only",
      "source-map-support/register"
    ]
  }
}
