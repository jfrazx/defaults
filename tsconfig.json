{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "target": "ESNext",
    "outDir": "./build",
    "declaration": true,
    "module": "commonjs",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["test"]
}
